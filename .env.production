# ==============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================================================
# WARNING: Ensure all sensitive values are properly secured
# DO NOT commit this file with real credentials
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL Database Settings
POSTGRES_DB=stockdb_prod
POSTGRES_USER=stockuser_prod
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Full Database URL (auto-constructed from above or override)
# DATABASE_URL=postgresql://stockuser_prod:password@db:5432/stockdb_prod

# ==============================================================================
# API TOKENS & AUTHENTICATION
# ==============================================================================
# Trading Central API Token (REQUIRED)
TRADING_CENTRAL_TOKEN=your_production_token_here

# ==============================================================================
# STOCK TICKER CONFIGURATION
# ==============================================================================
# Production tickers to track
TICKERS=AAPL,TSLA,NVDA,GOOGL,MSFT

# ==============================================================================
# DATA COLLECTION SETTINGS
# ==============================================================================
COLLECTION_INTERVAL_HOURS=1
MAX_RETRIES=3
RETRY_DELAY_SECONDS=60
RUN_INITIAL_COLLECTION=true

# ==============================================================================
# API RATE LIMITING & PERFORMANCE
# ==============================================================================
API_RATE_LIMIT=100
API_TIMEOUT=10
CACHE_TTL_SECONDS=300
HISTORICAL_DAYS=1825

# ==============================================================================
# CORS CONFIGURATION (CRITICAL FOR PRODUCTION)
# ==============================================================================
# IMPORTANT: Update with your actual production domain(s)
# Examples:
#   - Single domain: https://yourdomain.com
#   - Multiple domains: https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
#   - Include both www and non-www if needed
# 
# SECURITY NOTE: Never use "*" in production as it allows any origin
CORS_ORIGINS=https://yourdomain.com

# ==============================================================================
# FRONTEND CONFIGURATION
# ==============================================================================
# Frontend application API endpoint
REACT_APP_API_URL=https://yourdomain.com/api

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Disable debug mode in production
DEBUG=false

# Application info
APP_NAME=Stock Analysis API
APP_VERSION=1.0.0

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_EMAIL_ALERTS=false
ENABLE_SLACK_NOTIFICATIONS=false
