# ==============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ==============================================================================
#
# WARNING: This file contains example credentials only. DO NOT commit real
# credentials to version control.
#
# Instructions:
# 1. Copy this file to `.env`
# 2. Replace placeholder values with your actual credentials
# 3. Keep the `.env` file out of version control (it's in .gitignore)
# ==============================================================================

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# PostgreSQL connection URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://stockuser:stockpass@localhost:5432/stockdb

# ==============================================================================
# API TOKENS & AUTHENTICATION
# ==============================================================================
# Trading Central API Token
# Get your token from: https://api.tradingcentral.com/
# IMPORTANT: Replace with your actual token - NEVER commit real tokens!
TRADING_CENTRAL_TOKEN=your_trading_central_token_here

# ==============================================================================
# STOCK TICKER CONFIGURATION
# ==============================================================================
# Comma-separated list of stock tickers to track
# Example: AAPL,TSLA,NVDA,GOOGL,MSFT
TICKERS=AAPL,TSLA,NVDA

# ==============================================================================
# DATA COLLECTION SETTINGS
# ==============================================================================
# How often to collect data (in hours)
COLLECTION_INTERVAL_HOURS=1

# Maximum number of retry attempts for failed API calls
MAX_RETRIES=3

# Delay between retry attempts (in seconds)
RETRY_DELAY_SECONDS=60

# Whether to run initial data collection on startup
RUN_INITIAL_COLLECTION=true

# ==============================================================================
# API RATE LIMITING & PERFORMANCE
# ==============================================================================
# Maximum number of API requests per second
API_RATE_LIMIT=100

# API request timeout (in seconds)
API_TIMEOUT=10

# Cache TTL (Time To Live) in seconds
CACHE_TTL_SECONDS=300

# Number of days of historical data to fetch (default: 5 years)
HISTORICAL_DAYS=1825

# ==============================================================================
# CORS (Cross-Origin Resource Sharing) CONFIGURATION
# ==============================================================================
# Comma-separated list of allowed origins for CORS
# Development: Include localhost ports for frontend development
# Production: Replace with your actual domain(s)
# 
# Common patterns:
# - http://localhost:3000 (React default dev server)
# - http://localhost:8080 (Alternative frontend port)
# - https://yourdomain.com (Production domain)
# - Use * to allow all origins (NOT recommended for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
# Enable/disable optional features
ENABLE_EMAIL_ALERTS=false
ENABLE_SLACK_NOTIFICATIONS=false

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
# Enable debug mode (verbose logging, auto-reload)
# Set to false in production
DEBUG=true

# Application name and version (optional)
APP_NAME=Stock Analysis API
APP_VERSION=1.0.0
